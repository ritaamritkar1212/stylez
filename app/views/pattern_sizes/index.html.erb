<p id="notice"><%= notice %></p>

<h1>Pattern Sizes</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pattern_sizes.each do |pattern_size| %>
      <tr>
        <td><%= link_to 'Show', pattern_size %></td>
        <td><%= link_to 'Edit', edit_pattern_size_path(pattern_size) %></td>
        <td><%= link_to 'Destroy', pattern_size, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

